APP_ENV=production

# Use strong secrets (32+ chars each)
JWT_SECRET=replace-with-strong-32-plus-char-secret
JWT_REFRESH_SECRET=replace-with-different-strong-32-plus-char-secret

# Public domain used for HTTPS
DOMAIN=paintflow.ai
ACME_EMAIL=ops@paintflow.ai

# Comma-separated list of allowed browser origins
CORS_ALLOWED_ORIGINS=https://paintflow.ai,https://www.paintflow.ai

# Database credentials used by docker-compose
POSTGRES_DB=paintflow
POSTGRES_USER=paintflow
POSTGRES_PASSWORD=replace-with-strong-db-password

# First-deploy bootstrap admin (required on empty database)
BOOTSTRAP_ADMIN_EMAIL=admin@yourcompany.com
BOOTSTRAP_ADMIN_PASSWORD=replace-with-strong-admin-password
BOOTSTRAP_ADMIN_NAME=Platform Admin

# Optional ingestion controls
INGEST_ENABLED=true
INGEST_POLL_SECONDS=3600
